<?xml version="1.0" encoding="utf-8"?>
<androidx.recyclerview.widget.RecyclerView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".BreedInfoActivity"
    android:id="@+id/breed_info_activity_recycler">

    <TextView
        android:id="@+id/breed_name_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/headerStyle"/>

    <TextView
        android:id="@+id/breed_life_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/life_exp"
        style="@style/headerStyle"/>
    <TextView
        android:id="@+id/breed_life_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        style="@style/headerStyle"/>

    <TextView
        android:id="@+id/breed_weight_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/weight"
        style="@style/headerStyle"/>
    <TextView
        android:id="@+id/breed_weight_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/breed_history_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/history"
        style="@style/headerStyle"/>
    <TextView
        android:id="@+id/breed_history_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/breed_character_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/character"
        style="@style/headerStyle"/>
    <TextView
        android:id="@+id/breed_character_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/breed_health_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/health"
        style="@style/headerStyle"/>
    <TextView
        android:id="@+id/breed_health_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/breed_tips_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/tips"
        style="@style/headerStyle"/>
    <TextView
        android:id="@+id/breed_tips_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</androidx.recyclerview.widget.RecyclerView>